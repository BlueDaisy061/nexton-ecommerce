{
    "compilerOptions": {
      "lib": ["es2023"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "node16",
      "moduleResolution": "node16",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "moduleDetection": "force",
      "jsx": "preserve",
      "incremental": true,
      "paths": {
        "@/*": ["./server/*"]
      }
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
  }
  